<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/home_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        app:nts_active_color="#000"
        app:nts_animation_duration="300"
        app:nts_color="#000"
        app:nts_corners_radius="1.5dp"
        app:nts_factor="2.5"
        app:nts_gravity="top"
        app:nts_inactive_color="#c4c4c4"
        app:nts_type="point"
        app:nts_typeface="fonts/Roboto-Thin.ttf"
        app:nts_weight="3dp" />

    <Button
        android:id="@+id/toolbar_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:background="@drawable/ic_menu_white_36pt" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="24dp">

        <Button
            android:id="@+id/toolbar_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_search_white_72pt" />

        <Button
            android:id="@+id/toolbar_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_add_white_36dp"
            android:visibility="gone" />
    </FrameLayout>

</RelativeLayout>