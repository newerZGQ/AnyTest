<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".module.store.detail.AppDetailActivity">
    <!-- 遮挡状态栏透明的部分 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_margin_top"
        android:background="?attr/colorPrimary"/>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--
        scroll(0x00000001):要和滚动联动都要设置这个标志;
        enterAlways(0x00000004):跟随滚动视图的上下滚动;
        enterAlwaysCollapsed(0x00000008):当滚动视图滚动到底时，View只能以minHeight的高度滚入界面;
        exitUntilCollapsed(0x00000002):跟随滚动视图的上下滚动,但滚出时会预留minHeight的高度，实际能滚动的距离为(layout_height-minHeight);
        snap(0x00000010):根据滚动释放时的状态来自动执行完整的enter或者exit动画;
        -->
        <include layout="@layout/layout_toolbar"/>


        <com.iqiyi.vr.assistant.widget.PullScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_app_container"
                    android:layout_width="match_parent"
                    android:layout_height="124dp">
                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_toEndOf="@+id/iv_logo"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/qyTextGray"
                        android:textSize="15sp" />
                    <ImageView
                        android:id="@+id/iv_mouse"
                        android:layout_alignStart="@+id/tv_name"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="12dp"
                        android:layout_width="20dp"
                        android:layout_height="14dp" />
                    <ImageView
                        android:id="@+id/iv_handle"
                        android:layout_toEndOf="@+id/iv_mouse"
                        android:layout_below="@+id/tv_name"
                        android:layout_width="20dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp" />
                    <ImageView
                        android:id="@+id/iv_control"
                        android:layout_toEndOf="@+id/iv_handle"
                        android:layout_below="@+id/tv_name"
                        android:layout_width="20dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp" />
                    <TextView
                        android:id="@+id/tv_app_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/iv_mouse"
                        android:layout_below="@+id/iv_mouse"
                        android:layout_marginTop="8dp"/>
                    <TextView
                        android:id="@+id/tv_download_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_app_size"
                        android:layout_below="@+id/tv_app_size"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/button_selector"
                        android:textColor="@drawable/button_text_selector"
                        android:text="购买"
                        android:textSize="13sp" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/qyLineWhite" />
                <RelativeLayout
                    android:id="@+id/rl_capture_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_capture"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:text="应用截图"
                        android:textColor="#333333"
                        android:textSize="15sp" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_capture"
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:layout_below="@+id/tv_capture"
                        android:paddingBottom="12dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/qyLineWhite" />
                <RelativeLayout
                    android:id="@+id/rl_info_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:text="信息"
                        android:textColor="@color/qyTextGray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_dev"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_below="@+id/tv_info"
                        android:layout_marginTop="9dp"
                        android:text="开发者"
                        android:textColor="@color/qyInfoGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_ver"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_below="@+id/tv_dev"
                        android:layout_marginTop="9dp"
                        android:text="版本"
                        android:textColor="@color/qyInfoGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_below="@+id/tv_ver"
                        android:layout_marginTop="9dp"
                        android:text="大小"
                        android:textColor="@color/qyInfoGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_sup"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_below="@+id/tv_size"
                        android:layout_marginTop="9dp"
                        android:text="支持"
                        android:textColor="@color/qyInfoGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_intro"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_below="@+id/tv_sup"
                        android:layout_marginTop="9dp"
                        android:text="介绍"
                        android:textColor="@color/qyInfoGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_dev_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_info"
                        android:layout_toEndOf="@+id/tv_dev"
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="start"
                        android:textColor="@color/qyTextGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_ver_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_dev_content"
                        android:layout_toEndOf="@+id/tv_ver"
                        android:gravity="start"
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/qyTextGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_size_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ver_content"
                        android:layout_toEndOf="@+id/tv_size"
                        android:gravity="start"
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/qyTextGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_sup_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_size_content"
                        android:layout_toEndOf="@+id/tv_sup"
                        android:gravity="start"
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/qyTextGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_intro_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_sup_content"
                        android:layout_toEndOf="@+id/tv_intro"
                        android:gravity="start"
                        android:layout_marginTop="9dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@color/qyTextGray"
                        android:textSize="11sp" />

                </RelativeLayout>
            </LinearLayout>
        </com.iqiyi.vr.assistant.widget.PullScrollView>

        <include layout="@layout/layout_common_empty"/>

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>