<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/top_view"
        android:layout_marginLeft="32dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="65%"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:id="@+id/top_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/top_today_num"
                android:text="45"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textSize="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/top_daily_count"
                android:text="65"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/btm_view"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <com.zgq.wokao.ui.widget.AccuracyView
                android:id="@+id/accuracy_view"
                android:layout_width="280dp"
                android:layout_height="280dp"
                app:marker_progress="0.3"
                app:progress="0.4"
                app:stroke_width="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="260dp"
            android:layout_height="260dp">
            <TextView
                android:text="65%"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="35dp"
                android:textSize="60sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btm_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="正确率"
                android:layout_marginTop="6dp"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btm_today_num"
                    android:text="45"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="|"
                    android:textSize="30dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/btm_daily_count"
                    android:text="65"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="今日进度"
                android:layout_marginTop="6dp"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>