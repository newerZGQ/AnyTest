<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <RelativeLayout
        android:id="@+id/back_layout"
        android:background="@drawable/rectangle_transparent"
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_height="120dp">
        <Button
            android:text="退出学习"
            android:textSize="13sp"
            android:background="@color/transparent"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:visibility="invisible"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:text="开始学习"
                android:layout_gravity="right"
                android:textSize="13sp"
                android:background="@color/transparent"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="删除"
                android:layout_gravity="right"
                android:textSize="13sp"
                android:background="@color/transparent"
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_yellow"
        android:layout_height="120dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/paper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="32dp"
            android:text="fdsffsdafsaf"
            android:textColor="#316865"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/date_label"
            android:text="添加时间"
            android:textSize="12sp"
            android:textColor="#66267248"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp" />

        <TextView
            android:id="@+id/create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/date_label"
            android:layout_marginLeft="10dp"
            android:text="2017.5.6"
            android:textSize="13sp"
            android:textColor="#87267248" />

    </RelativeLayout>



</RelativeLayout>