<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/rectangle_transparent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:text="退出学习"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:text="开始学习"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:text="删除"
                android:textColor="@color/colorRed"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/rectangle_yellow"
        android:visibility="visible">

        <TextView
            android:id="@+id/paper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="18dp"
            android:text="fdsffsdafsaf"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/qst_types"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paper_name"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp">
            <TextView
                android:text="填空"
                android:background="@drawable/shape_radius_rectange_white_transparent"
                android:textColor="@color/color_paperitem_qsttype_text"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="25dp" />
            <TextView
                android:text="判断"
                android:background="@drawable/shape_radius_rectange_white_transparent"
                android:textColor="@color/color_paperitem_qsttype_text"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="25dp" />
            <TextView
                android:text="单选"
                android:background="@drawable/shape_radius_rectange_white_transparent"
                android:textColor="@color/color_paperitem_qsttype_text"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="25dp" />
            <TextView
                android:text="多选"
                android:background="@drawable/shape_radius_rectange_white_transparent"
                android:textColor="@color/color_paperitem_qsttype_text"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:layout_width="40dp"
                android:layout_height="25dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/study_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="32dp"
            android:text="正在学习"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <View
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/triangle_red_with_done" />

    </RelativeLayout>


</RelativeLayout>