<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="#5491EE"
        android:layout_height="200dp"/>
    <LinearLayout
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/toolbar_title"
            android:hint="暂时还没有试卷"
            android:maxLines="1"
            android:textSize="18sp"
            android:maxWidth="170dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/toolbar_switch"
            android:layout_marginLeft="10dp"
            android:hint="切换"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            android:gravity="left"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:background="#126EDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:id="@+id/study_detail"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recent_tag"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:background="#FEEFEB"
            android:textSize="12sp"
            android:text="最近"
            android:textColor="#DD795F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chapter"
            android:hint="测试"
            android:textColorHint="@color/black"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBaseline_toBaselineOf="@id/recent_tag"
            app:layout_constraintLeft_toRightOf="@id/recent_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chapters_tag"
            android:text="章节列表"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBaseline_toBaselineOf="@id/recent_tag"
            app:layout_constraintRight_toLeftOf="@id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/right_icon"
            android:text=">"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBaseline_toBaselineOf="@id/recent_tag"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/study_progress_tag"
            app:layout_constraintTop_toBottomOf="@id/recent_tag"
            app:layout_constraintLeft_toLeftOf="@id/recent_tag"
            android:layout_marginTop="12dp"
            android:text="学习进度：15/56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/devide_icon"
            app:layout_constraintLeft_toRightOf="@id/study_progress_tag"
            app:layout_constraintBaseline_toBaselineOf="@id/study_progress_tag"
            android:layout_marginLeft="20dp"
            android:text="|"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/study_acc"
            app:layout_constraintLeft_toLeftOf="@id/devide_icon"
            app:layout_constraintBaseline_toBaselineOf="@id/study_progress_tag"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:text="正确率：90%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/start_study"
            app:layout_constraintTop_toBottomOf="@id/study_progress_tag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:text="继续学习"
            android:textSize="16sp"
            android:background="#5491EE"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            app:layout_constraintTop_toBottomOf="@+id/start_study"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="12dp"/>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/study_mode"
        app:layout_constraintTop_toBottomOf="@id/study_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="8"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal"
            android:background="@drawable/rect_circle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/everyday_study"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="每日学习"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="6dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_weight="8"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rect_circle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/star_ques"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="收藏题目"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="6dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_weight="8"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rect_circle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/wrong_ques"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:text="错题本"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/study_record_title"
        app:layout_constraintTop_toBottomOf="@+id/study_mode"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:text="学习报告"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/study_record_title"
        android:id="@+id/study_record"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/record_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/today_num"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="今日做题"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_num"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@id/today_num"
                app:layout_constraintTop_toTopOf="@id/today_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="累计做题"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/total_days"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@id/total_num"
                app:layout_constraintTop_toTopOf="@id/total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="累计天数"
                    android:textSize="13sp" />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <View
            app:layout_constraintTop_toBottomOf="@id/record_detail"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/course"
        app:layout_constraintTop_toBottomOf="@+id/study_record"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"
        android:text="使用教程"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>